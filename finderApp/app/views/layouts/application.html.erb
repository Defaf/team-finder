<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>FinderApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  
  <header class="header navbar fixed-top navbar-expand-md">
    <div class="container">
      <%= link_to home_path,  class:"navbar-brand logo" do %>
            <%=  image_tag ('teamFinderLogo.png' ) %>
      <% end %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#headernav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="lnr lnr-text-align-right"></span>
        </button>
        <div class="collapse navbar-collapse flex-sm-row-reverse" id="headernav">
            <ul class=" nav navbar-nav menu">
                <li class="nav-item">
                  <%= link_to 'Home', home_path,class:"nav-link "%> 
                </li>
                <li class="nav-item">
                    <a class="nav-link " href="#aboutUs">about us</a>
                </li>
                <% if user_signed_in? %>
                    <li class="nav-item">
                         <%= link_to 'Events', events_path,class:"nav-link "%> 
                    </li>
                <% end%>
                <li class="nav-item">
                    <a class="nav-link " href="#">Contact</a>
                </li>
            </ul>
        </div>
    </div>
</header>

  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

  <section class="welcome_user">
    <div class="container">
      <% if user_signed_in? %>
      
        <h4>welcome <%= current_user.email %></h4>
          <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "link_color" %>
          <%= link_to "Change passwrod", edit_user_registration_path , class: "link_color" %>

        <% else %>
          <%= link_to "Sign Up", new_user_registration_path %>
          <%= link_to "Sing in", new_user_session_path %>
      <% end %>
    </div>
  </section>
  
  
    <%= yield %>


