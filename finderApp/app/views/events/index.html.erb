<main class="container">
    <p id="notice"><%= notice %></p>

    <h1 class="section_title page_name">Events</h1>

    <%= link_to 'New Event', new_event_path, class:"btn btn-primary btn_postion" %>

    <table class="table">
      <thead class="thead-dark">
        <tr>
          <th scope="col">Name event</th>
          <th scope="col">Description</th>
          <th scope="col">Date</th>
          <th scope="col">Location</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @events.each do |event| %>
          <tr>
            <td><%= event.nameEvent %></td>
            <td><%= event.description %></td>
            <td><%= event.date %></td>
            <td><%= event.location %></td>
            <td><%= link_to event do %>
              <%=  image_tag ('icon_show.png' ), class:"icon" %>
            <% end %></td>
            <td><%= link_to edit_event_path(event) do %>
              <%=  image_tag ('icon_edit.png' ), class:"icon" %>
            <% end %></td>
            <td><%= link_to  event, method: :delete, data: { confirm: 'Are you sure?' } do %>
              <%=  image_tag ('icon_delete.png' ), class:"icon" %>
            <% end %></td>

          </tr>
        <% end %>
      </tbody>
    </table>

</main>


