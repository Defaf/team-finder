<p id="notice"><%= notice %></p>

<h1>Members</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Team</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.user %></td>
        <td><%= member.team %></td>
        <td><%= link_to 'Show', event_team_member_path (@team , member) %></td>
        <td><%= link_to 'Edit', edit_event_team_member_path(@team , member) %></td>
        <td><%= link_to 'Destroy', event_team_member_path (@team , member), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Member', new_event_team_member_path(@member) %>
<%= link_to 'Back', event_team_path(@team) %>
